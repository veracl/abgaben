<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th class="th_vert">Name:</th>
    <td><%= @idea.name %></td>
  </tr>

  <tr>
    <th class="th_vert">Category:</th>
    <td><%= @idea.category.name %></td>
  </tr>

  <tr>
    <th class="th_vert">Description:</th>
    <td><%= @idea.description %></td>
  </tr>

  <% if @idea.picture? %>
    <tr>
      <th colspan="2">Picture:</th>
    </tr>
    <tr>
      <td colspan="2"><%= image_tag(@idea.picture_url, :width => 600) %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', root_path %>
